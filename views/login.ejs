<!doctype html>
<html>
  <head>
    <title>Login to <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Login to <%= shopData.shopName %></h1>

    <% if (errors && errors.length > 0) { %>
      <div class="error-messages">
        <% errors.forEach(function(error) { %>
          <p style="color: red;"><%= error.msg %></p>
        <% }) %>
      </div>
    <% } %>

    <form method="POST" action="loggedin">
      <p>Username: <input id="username" type="text" name="username" value="<%= username %>" /></p>
      <p>Password: <input id="password" type="password" name="password" value="" /></p> <!-- Password field should be blank -->
      <input type="submit" value="Login" />
    </form>
  </body>
</html>
